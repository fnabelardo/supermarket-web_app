@model List<Product>

@section title
{
    <h3> Products </h3>
}
<br/>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td><a class="btn btn-link" asp-controller="Products" asp-action="Edit" 
                           asp-route-id="@product.ProductId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="Products" asp-action="Delete" 
                           asp-route-categoryid="@product.ProductId" onclick=" return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<br/>

<a class="btn btn-primary" asp-controller="Categories" asp-action="Add">Add</a>

@section Scripts
{
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?")
        }
    </script>
}
